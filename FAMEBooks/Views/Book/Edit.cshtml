@model FAMEBooks.ViewModels.Book.EditViewModel
@{
    ViewData["Title"] = "Books- Edit";
}

<h1>Create</h1>

<h4>Book</h4>
<hr />

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="Edit">
            <input hidden asp-for="BookId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control form-control-sm" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control form-control-sm" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control form-control-sm" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="DatePublished" class="control-label"></label>
                            <input asp-for="DatePublished" class="form-control form-control-sm" />
                            <span asp-validation-for="DatePublished" class="text-danger"></span>

                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Publisher" class="control-label"></label>
                            <input asp-for="Publisher" class="form-control form-control-sm" />
                            <span asp-validation-for="Publisher" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" asp-items="(SelectList)ViewBag.Categories" class="custom-select selectp custom-select-sm mr-sm-2">
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="BookCount" class="control-label"></label>
                    <input asp-for="BookCount" class="form-control form-control-sm" />
                    <span asp-validation-for="BookCount" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Pages" class="control-label"></label>
                    <input asp-for="Pages" class="form-control form-control-sm" />
                    <span asp-validation-for="Pages" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3"></div>
                <div class="form-group col-md-3">
                    <input type="submit" value="Update" class="btn btn-block btn-primary btn-sm" />
                </div>
                <div class="form-group col-md-3">
                    <input type="button" value="Cancle" class="btn btn-block btn-outline-warning btn-sm" />
                </div>
                <div class="form-group col-md-3">
                </div>
            </div>


            @*<div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-3">
                        <div class="form-row">
                            <input type="submit" value="Create" class="btn btn-block btn-primary btn-sm" />
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>*@




            @*



                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            *@
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
