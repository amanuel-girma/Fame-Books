@model FAMEBooks.ViewModels.Book.DisplayViewModel
@{
    ViewData["Title"] = "Books- Delete";
}
<h4 class="text-center  text-danger">Are you sure you want to delete this record?</h4>
<hr />

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="Delete">
            <input hidden asp-for="BookId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control form-control-sm " readonly />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control form-control-sm " readonly />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">

                <div class="form-group col-md-4">
                    <label asp-for="Publisher" class="control-label"></label>
                    <input asp-for="Publisher" class="form-control form-control-sm " readonly />
                    <span asp-validation-for="Publisher" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DatePublished" class="control-label"></label>
                    <input asp-for="DatePublished" class="form-control form-control-sm " readonly />
                    <span asp-validation-for="DatePublished" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Category" class="control-label"></label>
                    <input asp-for="Category" class="form-control form-control-sm " readonly />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="ISBN" class="control-label"></label>
                            <input asp-for="ISBN" class="form-control form-control-sm " readonly />
                            <span asp-validation-for="ISBN" class="text-danger"></span>

                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="DateCreated" class="control-label"></label>
                            <input asp-for="DateCreated" class="form-control form-control-sm " readonly />
                            <span asp-validation-for="DateCreated" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Pages" class="control-label"></label>
                            <input asp-for="Pages" class="form-control form-control-sm " readonly />
                            <span asp-validation-for="Pages" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CreatedBy" class="control-label"></label>
                    <input asp-for="CreatedBy" class="form-control form-control-sm " readonly />
                    <span asp-validation-for="CreatedBy" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="BookCount" class="control-label"></label>
                    <input asp-for="BookCount" class="form-control form-control-sm " readonly />
                    <span asp-validation-for="BookCount" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="UpdatedBy" class="control-label"></label>
                    <input asp-for="UpdatedBy" class="form-control form-control-sm " readonly />
                    <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3"></div>
                <div class="form-group col-md-3">
                    <input type="submit" value="Delete" class="btn btn-block btn-danger btn-sm" />
                </div>
                <div class="form-group col-md-3">
                    <a class="btn btn-block btn-outline-primary btn-sm" asp-action="index">Cancel</a>
                </div>
                <div class="form-group col-md-3">
                </div>
            </div>


            @*<div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-3">
                        <div class="form-row">
                            <input type="submit" value="Create" class="btn btn-block btn-primary btn-sm" />
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>*@




            @*



                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            *@
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
